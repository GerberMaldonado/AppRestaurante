<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F1"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/elije"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

    <!--Fila 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!--Opcion 1-->
        <LinearLayout
            android:id="@+id/linear_0"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_curvados"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/a_domicilio"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:src="@mipmap/ic_a_domicilio" />

            <TextView
                android:id="@+id/txt_sem1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:padding="8dp"
                android:text="@string/a_domicilio"
                android:textAlignment="center"
                android:textColor="@color/colorTextIcons"
                android:textSize="18sp" />
        </LinearLayout>
        <!--Opcion 2-->
        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_curvados"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reservar_mesa"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_reservar" />

            <TextView
                android:id="@+id/txt_semestre2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="@string/reservar"
                android:textAlignment="center"
                android:textColor="@color/colorTextIcons"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <!--Fin de Fila 1-->

    <!--Fila 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!--Opcion 1-->
        <LinearLayout
            android:id="@+id/linear_3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_curvados"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen_menu"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:src="@mipmap/ic_menu" />

            <TextView
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:padding="8dp"
                android:text="@string/menu"
                android:textAlignment="center"
                android:textColor="@color/colorTextIcons"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
    <!--Fin de Fila 1-->
</LinearLayout>